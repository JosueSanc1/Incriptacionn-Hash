@model Proyecto1.Models.Usuario;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header">
                        Registrarse
                    </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">

                            <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="NombreUsuario" required />
                            <input class="form-control mb-3" type="text" placeholder="Telefono" required asp-for="Telefono" />
                            <input class="form-control mb-3" type="text" placeholder="Correo Electronico" required asp-for="Correo" />
                            <input class="form-control mb-3" type="text" placeholder="Contraseña" required asp-for="Contraseña"/>

                            <input type="hidden" name="IDDoctor" required asp-for="Iddoctor" />
                            <!-- Campo oculto para el ID del Paciente -->
                            <input type="hidden" name="IDPaciente" required asp-for="Idpaciente" />
                            <!-- Campo para seleccionar el tipo de usuario -->
                            <div class="form-group">
                                <label for="TipoUsuario">Tipo de Usuario</label>
                                <select class="form-control" id="TipoUsuario" name="TipoUsuario" required>
                                    <option value="">Seleccione...</option>
                                    <option value="Doctor">Doctor</option>
                                    <option value="Paciente">Paciente</option>
                                   
                                </select>
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit"> Registrar</button>
                            </div>
                            
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")">Registrate</a>

                        </form>

                    </div>

                </div>
            </div>


        </div>




        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
